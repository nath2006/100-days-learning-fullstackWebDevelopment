    <link type="text/css" rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= kindOfDay %> </h1>
    </div>

    <div class="box">
        <% for(var i=0;i<tasks.length;i++){ %> 
            <div class="item">
                <input type="checkbox" 
                <p><%= tasks[i] %></p>
            </div>
        <% } %>

            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" id="newItem" placeholder="New Items" autocomplete="off">
                <button type="submit">+</button>
            </form>
    </div>

</body>
</html>